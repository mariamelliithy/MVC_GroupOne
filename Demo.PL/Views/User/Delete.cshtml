@model UserViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1 class="my-5 w-75 m-auto">Delete User </h1>
<ul class="nav nav-tabs">
    <li class="nav-item" id="userTabs" role="tablist">
        <a class="nav-link active" id="general-tab" data-bs-toggle="tab" href="#general" role="tab" aria-controls="general" aria-selected="true">General</a>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    @* General tab conten *@
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">
        <div class="row">
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Id"></label>
                <input asp-for="Id" class="form-control" readonly />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="FName"></label>
                <input asp-for="FName" class="form-control" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="LName"></label>
                <input asp-for="LName" class="form-control" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="Email"></label>
                <input asp-for="Email" class="form-control" readonly />
            </div>
        </div>
    </div>
    <div class="mt-4">
        <form method="post" asp-controller="User" asp-action="Delete" asp-route-id="@Model.Id">
            <input type="submit" class="btn btn-danger" value="Delete"/>
            <a asp-action="Index" class="btn btn-outline-dark">Back To List</a>
        </form>
    </div>
</div>

