@model UserViewModel
@{
    ViewData["Title"] = "Details";
}

<h1 class="my-5 w-75 m-auto">Employee Details</h1>
<br />
<br />

<div class="tab-content" id="myTabContent">
    @* General tab conten *@
    <div class="tab-pane fade show active p-4 border" id="general" role="tabpanel" aria-labelledby="general-tab">
        <div class="row">
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="Id"></label>
                <input asp-for="Id" class="form-control" readonly />
            </div>
            <div class="form-group col-6">
                <label class="col-form-label" asp-for="FName"></label>
                <input asp-for="FName" class="form-control" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="LName"></label>
                <input asp-for="LName" class="form-control" readonly />
            </div>
            <div class="form-group col-12">
                <label class="col-form-label" asp-for="Email"></label>
                <input asp-for="Email" class="form-control" readonly />
            </div>
        </div>
    </div>
    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a>
        <a asp-action="Index" class="btn btn-outline-dark">Back To List</a>
    </div>
</div>

