@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="main-agileinfo">
        <div class="agileits-top">
            <h1 class="m-1">SignUp Form</h1>
            <div asp-validation-summary="All" class="text-danger"></div>
            <form asp-action="Register">
                <input asp-for="FName" placeholder="Enter first name">
                <span asp-validation-for="FName" class="text-danger"></span>
                <br />
                <input asp-for="LName" placeholder="Enter last name">
                <span asp-validation-for="LName" class="text-danger"></span>
                <br />
                <input asp-for="Email" placeholder="Enter the email">
                <span asp-validation-for="Email" class="text-danger"></span>
                <br />
                <input asp-for="Password" placeholder="Enter the password">
                <span asp-validation-for="Password" class="text-danger"></span>
                <br />
                <input asp-for="ConfirmPassword" placeholder="Enter the confirmation password">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                <br />
                <div class="wthree-text">
                    <label class="anim d-flex align-items-center gap-1">
                        <input asp-for="IsAgree" class="checkbox">
                        <span>I Agree To The Terms & Conditions</span>
                    </label>
                    <div class="clear"></div>
                </div>
                <input type="submit" value="SIGNUP">
            </form>
            <p><a asp-action="Login"> Login Now!</a></p>
        </div>
    </div>
</div>

@section ValidationScript {
	<partial name="_ValidationScriptsPartial" />
}