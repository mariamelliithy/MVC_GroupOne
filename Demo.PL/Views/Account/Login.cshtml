@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="d-flex justify-content-center align-items-center min-vh-100">
    <div class="main-agileinfo">
        <div class="agileits-top">
            <h1 class="m-1">SignIn Form</h1>
            <div asp-validation-summary="All" class="text-danger"></div>
            <form asp-action="Login">
                <input asp-for="Email" placeholder="Enter the email">
                <span asp-validation-for="Email" class="text-danger"></span>
                <br />
                <input asp-for="Password" placeholder="Enter the password">
                <span asp-validation-for="Password" class="text-danger"></span>
                <br />
                <div class="wthree-text">
                    <label class="anim">
                        <input asp-for="RememberMe" class="checkbox">
                        <span>Remember me</span>
                    </label>
                    <div class="clear"></div>
                </div>
                <input type="submit" value="SIGNIN">
            </form>
            <p>Don't have an account?<a asp-action="Register"> Register Now!</a></p>
            <p><a asp-action="ForgetPassword"> Reset your password</a></p>
        </div>
    </div>
</div>

@section ValidationScript {
	<partial name="_ValidationScriptsPartial" />
}

