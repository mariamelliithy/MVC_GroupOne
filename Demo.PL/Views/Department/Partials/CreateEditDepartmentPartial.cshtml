@model DepartmentViewModel
<form method="post" class="col-8" asp-controller="Department" asp-action="@ViewBag.Action">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group mb-3">
        <label class="form-label" asp-for="Code">Code</label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label class="form-label" asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label class="form-label" asp-for="Description">Description</label>
        <textarea class="form-control" asp-for="Description"></textarea>
    </div>
    <div class="form-group mb-3">
        <label class="form-label" asp-for="CreationDate">CreationDate</label>
        <input type="date" asp-for="CreationDate" class="form-control" />
    </div>
    @if( ViewBag.Action == "Create")
    {
    <div class="mt-4 m-auto">
        <input class="btn btn-primary" type="submit" value="Create" />
        <a asp-controller="Department" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
    </div>
    }
    else
    {
        <div class="mt-4 m-auto">
            <input class="btn btn-success" type="submit" value="Edit" />
            <a asp-controller="Department" asp-action="Index" class="btn btn-outline-dark">Back to list</a>
        </div>
    }
</form>